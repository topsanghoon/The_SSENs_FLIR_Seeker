{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run meta_txthread_test (fixed args)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": ["192.168.0.5", "56060"],
      "cwd": "${workspaceFolder}/src/software/build/debug",
      "environment": [],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "Build: meta_txthread_test"
    },
    {
      "name": "Run meta_txthread_test (prompt args)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": ["${input:ip}", "${input:port}"],
      "cwd": "${workspaceFolder}/src/software/build/debug",
      "environment": [],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "stopAtEntry": false,
      "externalConsole": false,
      "preLaunchTask": "Build: meta_txthread_test"
    },
    {
      "name": "Run ir_thread_gui",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "cwd": "${workspaceFolder}/src/software/build/debug",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "externalConsole": false,
      "preLaunchTask": "Build: ir_thread_gui"
    }
  ],
  "inputs": [
    { "id": "ip",   "type": "promptString", "description": "Target IP",   "default": "192.168.0.5" },
    { "id": "port", "type": "promptString", "description": "Target PORT", "default": "56060" }
  ]
}
